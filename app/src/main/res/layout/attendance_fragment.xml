<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <ImageView
                    android:id="@+id/imageCreateClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    style="@style/CardView"
                    android:background="@color/cardColor"
                    card_view:cardCornerRadius="1dp"
                    android:elevation="2dp">
                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cardColor">
                        <EditText
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:textColorHint="@color/textHint"
                            android:hint="Name your class"
                            android:background="@android:color/transparent"
                            />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>
                </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.8dp"
                android:background="@color/fitproTheme"
                />
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="1dp"
                    style="@style/CardView"
                    android:elevation="2dp"
                    android:background="@color/cardColor"
                    >
                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cardColor"
                        >
                        <EditText
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/startDateText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColorHint="@color/textHint"
                            android:hint="Current Date"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>
                </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/GrayCloud"/>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                style="@style/CardView2"
                card_view:cardCornerRadius="4dp"
                android:elevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/cardColor">
                    <TextView
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="Customers"
                        android:textColor="@color/Gray"
                        android:textSize="17sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/GrayCloud"/>
                    <ListView
                        android:background="@color/background"
                        android:divider="@color/GrayCloud"
                        android:id="@+id/customersAttendance"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        >
                    </ListView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:background="@color/background"
                >
                <Button
                    style="@style/successBtn"
                    android:text="Save"
                    android:id="@+id/saveAttendanceButton"
                    />
                <Button
                    style="@style/cancelBtn"
                    android:text="cancel"
                    android:layout_below="@+id/saveAttendanceButton"
                    android:id="@+id/cancelAttendanceButton"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>


