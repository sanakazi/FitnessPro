<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background">

            <TextView
                android:visibility="gone"
                android:id="@+id/editbtnUser"
                android:gravity="right|center"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/fitproTheme"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="@string/editButtonIcon"/>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="1dp"
                style="@style/CardView"
                android:background="@color/cardColor"

                android:elevation="2dp">
                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardColor">

                    <EditText
                        android:textColor="@color/GrayDolphin"
                        android:id="@+id/displaynameUser"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/textHint"
                        android:hint="Display Name"
                        android:textAllCaps="true"
                        android:background="@android:color/transparent"
                        />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.8dp"
                android:background="@color/GrayGoose"
                />
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardColor"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <EditText
                    android:textColor="@color/GrayDolphin"
                    android:id="@+id/emailUser"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:textColorHint="@color/textHint"
                    android:hint="Email"
                    android:inputType="textWebEmailAddress"
                    android:background="@android:color/transparent"
                    />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/GrayCloud"/>
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardColor"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <EditText
                    android:textColor="@color/GrayDolphin"
                    android:id="@+id/username"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:textColorHint="@color/textHint"
                    android:hint="Username"
                    android:inputType="textWebEmailAddress"
                    android:background="@android:color/transparent"
                    />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/GrayCloud"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/pswrdLayout">
                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <EditText
                        android:textColor="@color/GrayDolphin"
                        android:id="@+id/passwordUser"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="@color/textHint"
                        android:hint="Password"
                        android:inputType="textWebPassword"
                        android:background="@android:color/transparent"
                        />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/GrayCloud"/>
                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <EditText
                        android:textColor="@color/GrayDolphin"
                        android:id="@+id/confirmPwdUser"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="@color/textHint"
                        android:hint="Confirm Password"
                        android:inputType="textWebPassword"
                        android:background="@android:color/transparent"
                        />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/GrayCloud"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                style="@style/CardView"
                card_view:cardCornerRadius="1dp"
                android:elevation="2dp"
                android:background="@color/cardColor">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/roleNameView"
                        android:visibility="invisible"
                        android:orientation="vertical"
                        >
                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cardColor">

                            <EditText
                                android:paddingLeft="10dp"
                                android:id="@+id/RoleEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:textColorHint="@color/textHint"
                                android:inputType="textPersonName"
                                android:hint="Role name"
                                android:textColor="@color/GrayDolphin"
                                android:background="@android:color/transparent"
                                android:textAllCaps="true"
                                android:singleLine="true"
                                />
                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/spinnerRoleNameView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/txt"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/Role"/>

                        <Spinner
                            android:id="@+id/RoleTypeSpinner"
                            android:padding="5dp"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.8dp"
                android:background="@color/GrayGoose"
                />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="1dp"
                android:layout_marginLeft="0dp"
                android:background="@color/cardColor"
                android:layout_marginRight="0dp"
                android:elevation="2dp">
                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardColor">
                    <EditText
                        android:textColor="@color/GrayDolphin"
                        android:id="@+id/addressUser"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:textColorHint="@color/textHint"
                        android:hint="Address"
                        android:inputType="textPostalAddress"
                        android:background="@android:color/transparent"
                        />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/GrayCloud"/>


            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/cardColor">

                <EditText
                    android:textColor="@color/GrayDolphin"
                    android:id="@+id/numberUser"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textColorHint="@color/textHint"
                    android:hint="Number"
                    android:layout_gravity="center_vertical"
                    android:maxLength="10"
                    android:background="@android:color/transparent"
                    />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/GrayCloud"/>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom|center"
                android:background="@color/background"
                >
                <Button
                    style="@style/successBtn"
                    android:text="Save"
                    android:id="@+id/saveUserButton"
                    android:visibility="visible"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressCreateUser"/>
</FrameLayout>