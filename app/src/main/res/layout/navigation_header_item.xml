<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="130dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/header_bgm4"/>

    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/male"/>
        <LinearLayout
            android:background="@drawable/gradient_top_bottom"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/displayNameHeader"
                android:textAllCaps="true"
                android:text="nilanku"
                android:textStyle="bold"
                android:textColor="@color/MilkWhite"
                android:textSize="19sp"/>
            <TextView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roleNameHeader"
                android:textSize="16sp"
                android:text="tenant admin"
                android:textColor="@color/MilkWhite"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>