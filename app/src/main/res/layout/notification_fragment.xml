<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="150dp"
                card_view:cardCornerRadius="1dp"
                android:elevation="2dp">
                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/messageNotification"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:textColorHint="@color/textHint"
                        android:hint="Message"
                        android:background="@android:color/transparent"
                        />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.8dp"
                android:background="@color/fitproTheme"
                />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                style="@style/CardView2"
                card_view:cardCornerRadius="1dp"
                android:elevation="2dp"
                android:background="@color/cardColor">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/cardColor">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"

                        >
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Class"
                            android:textColor="@color/Gray"
                            android:textSize="18sp"
                            android:padding="10dp"/>
                        <View
                            android:layout_centerVertical="true"
                            android:layout_width="1dp"
                            android:layout_height="35dp"
                            android:background="@color/GrayCloud"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/classAddImageButton"
                            />
                        <ImageButton
                            android:layout_centerVertical="true"
                            android:id="@+id/classAddImageButton"
                            android:layout_margin="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/add"
                            android:alpha="0.5"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/GrayCloud"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ListView
                            android:background="@color/background"
                            android:id="@+id/classNotification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                        </ListView>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"

                        >
                        <TextView
                            android:textColor="@color/Gray"
                            android:layout_centerVertical="true"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Customers"
                            android:textSize="18sp"
                            android:padding="10dp"/>
                        <View
                            android:layout_centerVertical="true"
                            android:layout_width="1dp"
                            android:layout_height="35dp"
                            android:background="@color/GrayCloud"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/customerAddImageButton"
                            />
                        <ImageButton
                            android:layout_centerVertical="true"
                            android:id="@+id/customerAddImageButton"
                            android:layout_margin="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/add"
                            android:alpha="0.5"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/GrayCloud"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ListView
                            android:background="@color/background"
                            android:id="@+id/customerNotification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                        </ListView>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"

                        >
                        <TextView
                            android:textColor="@color/Gray"
                            android:layout_centerVertical="true"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textSize="18sp"
                            android:padding="10dp"/>
                        <View
                            android:layout_centerVertical="true"
                            android:layout_width="1dp"
                            android:layout_height="35dp"
                            android:background="@color/GrayCloud"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/allAddImageButton"
                            />
                        <ImageButton
                            android:layout_centerVertical="true"
                            android:id="@+id/allAddImageButton"

                            android:layout_margin="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/add"
                            android:alpha="0.5"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/GrayCloud"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ListView
                            android:background="@color/background"
                            android:id="@+id/classCustomer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                        </ListView>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/GrayCloud"/>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:background="@color/background"
                >
                <Button

                    android:text="Add"
                    style="@style/successBtn"
                    android:id="@+id/addNotificationButton"
                    />
                <Button
                    style="@style/cancelBtn"
                    android:text="cancel"
                    android:layout_below="@+id/addNotificationButton"
                    android:id="@+id/cancelNotificationButton"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
